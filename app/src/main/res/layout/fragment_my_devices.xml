<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp">

            <android.support.v7.widget.CardView
                style="@style/CardView.BackgroundColor.MyDevices"
                android:layout_width="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_type_devices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_28dp"
                    android:gravity="center_vertical"
                    android:text="@string/all_devices"
                    android:textColor="@color/colorText"
                    android:textSize="16dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_add_devices"
                style="@style/CardView.BackgroundColor.MyDevices"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_add_device"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/ic_left_add"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:text="@string/btn_add_devices"
                    android:textColor="@color/colorAccent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_delete"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="70dp"
            android:background="@mipmap/bg_delete_shade"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_orange_5"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:text="@string/delete"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_delete"
                android:layout_centerHorizontal="true"
                android:text="@string/selected"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_blue_5"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                android:text="@string/cancel"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include layout="@layout/include_classics_header" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            style="@style/RecyclerView.Padding"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/item_my_devices" />

        <include layout="@layout/include_classics_footer" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@mipmap/bg_add_devices_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:background="@mipmap/bg_map"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="28dp"
                android:src="@mipmap/ic_devices_type" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/hint_no_devices"
                android:textColor="@color/colorGrayC9" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/btn_white_bg"
            android:drawableLeft="@mipmap/ic_left_add"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingLeft="28dp"
            android:paddingTop="22dp"
            android:paddingRight="28dp"
            android:paddingBottom="22dp"
            android:text="@string/btn_add_devices"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

</LinearLayout>