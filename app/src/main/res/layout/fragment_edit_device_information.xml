<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ezy.ui.layout.LoadingLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="@string/hint_device_type"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_device_type"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_equipment_code"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_device_code"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_device_alias"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_device_alias"
                            style="@style/text_input_style_item_et"
                            android:drawableRight="@mipmap/ic_device_import"
                            android:hint="@string/hint_enter_device_alias"
                            android:maxLength="6"
                            android:textColor="#2694E1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_installation_location"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_device_location"
                            style="@style/text_input_style_item_et"
                            android:drawableRight="@mipmap/ic_device_import"
                            android:focusable="false"
                            android:text="@string/please_select"
                            android:textColor="#2694E1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_equipment_model"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_device_model"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_equipment_status"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_device_state"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_manufacturer"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_manufacturer"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_service_start"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_service_start"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="@string/hint_service_dead"
                        app:hintTextAppearance="@style/common_text_input_layout_style">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ed_service_dead"
                            style="@style/text_input_style_item_et"
                            android:focusable="false" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_keep_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="48dp"
                        android:background="@drawable/btn_orange_32"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="@string/keep"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/tv_cancel_device"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_keep_device"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:gravity="center"
                        android:padding="14dp"
                        android:text="@string/cancel"
                        android:textColor="@color/colorTextGray9" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_restoration_or_erasure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_restoration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorAccent"
                        android:text="@string/restoration"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btn_erasure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorBlue"
                        android:text="@string/erasure"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </ezy.ui.layout.LoadingLayout>
</LinearLayout>