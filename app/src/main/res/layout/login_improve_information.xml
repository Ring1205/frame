<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:paddingTop="15dp"
    tools:ignore="SpUsage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/complete_information"
        android:textColor="@color/colorBlack"
        android:textSize="23sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/start_up_improve_information_input_layout_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:visibility="visible"
        app:hintTextAppearance="@style/common_signin_text_input_layout_style">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/start_up_improve_information_et_nickname"
            style="@style/start_up_style_item_et"
            android:hint="@string/hint_real_name"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/start_up_improve_information_input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:hintTextAppearance="@style/common_signin_text_input_layout_style"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/start_up_improve_information_et_password"
            style="@style/start_up_style_item_et"
            android:maxLength="15"
            android:hint="@string/hint_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        app:hintTextAppearance="@style/common_signin_text_input_layout_style"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/start_up_improve_information_et_re_enter_password"
            style="@style/start_up_style_item_et"
            android:maxLength="15"
            android:digits="@string/digits_password"
            android:hint="@string/hint_reconfirm_new_password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <com.jzxfyun.common.widget.AnimButton
        android:id="@+id/start_up_improve_information_btn_complete"
        style="@style/start_up_style_item_btn_main"
        android:layout_height="40dp"
        app:anim_btn_text="@string/common_string_complete"
        app:anim_btn_text_color="@android:color/white"
        app:anim_btn_text_size="17dp"
        app:revolution_time="2000" />
</LinearLayout>
