<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:paddingTop="15dp"
    tools:ignore="SpUsage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/forgot_password"
        android:textColor="@color/colorBlack"
        android:textSize="23sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/start_up_forget_password_til_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:hintTextAppearance="@style/common_signin_text_input_layout_style">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/start_up_forget_password_et_account"
            style="@style/start_up_style_item_et"
            android:hint="@string/hint_phone_number"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/start_up_forget_password_til_captcha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            app:hintTextAppearance="@style/common_signin_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/start_up_forget_password_et_captcha"
                style="@style/start_up_style_item_et"
                android:hint="@string/hint_enter_captcha"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <!--展示图形验证码-->
        <ImageView
            android:id="@+id/start_up_forget_password_img_captcha"
            android:layout_width="90dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/start_up_forget_password_til_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            app:hintTextAppearance="@style/common_signin_text_input_layout_style">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/start_up_forget_password_et_verification"
                style="@style/start_up_style_item_et"
                android:hint="@string/hint_verification_code"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <!--展示图形验证码-->
        <Button
            android:id="@+id/start_up_forget_password_btn_verification"
            style="@style/start_up_style_item_btn_verification"
            android:text="@string/btn_get_code" />
    </LinearLayout>

    <com.jzxfyun.common.widget.AnimButton
        android:id="@+id/start_up_forget_password_next"
        style="@style/start_up_style_item_btn_main"
        android:layout_height="40dp"
        app:anim_btn_text="@string/common_string_next"
        app:anim_btn_text_color="@android:color/white"
        app:anim_btn_text_size="17dp"
        app:revolution_time="2000" />
</LinearLayout>
